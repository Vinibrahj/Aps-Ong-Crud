@model OngCrud.Models.Funcionario
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Funcionario", FormMethod.Post, new { onsubmit = "return SubmitForm(this)"}))
{
    @Html.HiddenFor(model => model.FuncID)
    <div class="form-group">
        @Html.LabelFor(model => model.Nome, new { @class = "control-label" })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Cargo, new { @class = "control-label" })
        @Html.EditorFor(model => model.Cargo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Sede, new { @class = "control-label" })
        @Html.EditorFor(model => model.Sede, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Idade, new { @class = "control-label" })
        @Html.EditorFor(model => model.Idade, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Salario, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">R$</span>
            @Html.EditorFor(model => model.Salario, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>


    <div class="form-group">
        <input type="submit" value="Adicionar" class="btn btn-primary" />
        <input type="reset" value="Cancelar" class="btn" />
    </div>


}
